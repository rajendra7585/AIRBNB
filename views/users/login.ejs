<% layout("/layouts/boilerplate")%>
<div class="row mt-3">
<div class="col-6 offset-3">
     <form action="/listings" method="get" class="needs-validation" novalidate>
      
      <div class="mb-3">
            <h1 class=" offset-1"><b>Signup for Sightseers</b></h1>
            <label for="Username" class="form-label">Username</label>
            <input type="text"  name="listing[Username]" class="form-control" required>
            <div class="valid-feedback">Looks good.</div>
           </div>

           
      
            <label for="Password" class="form-label">Password</label>
            <input type="password"  name="listing[Password]" class="form-control" required>
             <br>
          
            <button class="offset-5 btn btn-success">Signup</button>
         
     </form>
      </div>
</div>